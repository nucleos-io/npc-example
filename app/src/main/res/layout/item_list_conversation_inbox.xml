<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_sm">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/size_image_list_levels"
        android:layout_height="@dimen/size_image_list_levels"
        android:src="@color/gray_50" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text.sm"
            tools:text="Alexander Fermin" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSubtitle"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xxs"
                android:layout_marginStart="@dimen/spacing_xxs"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text.xs"
                tools:text="Needs your attention" />


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_image_list_levels"
        android:layout_marginLeft="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_md"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text.default"
            tools:text="15:35" />

        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/circular_primary_inbox"
            android:padding="@dimen/spacing_xxxs"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text.xxs"
            tools:text="13" />


    </FrameLayout>


</LinearLayout>